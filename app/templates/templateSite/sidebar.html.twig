{% block content %}
<aside class="sidebar">
    <div class="mobile_nav">
        <div class="logo">
            <img src="{{ asset( 'assets/img/logo.svg' ) }}" alt="Logo">
        </div>
        <span id="openMenu">
            <span></span>
            <span></span>
